<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="parent_linear_layout">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">?attr/background_color</item>

    </style>

    <style name="imageStyle">
        <item name="android:layout_marginTop">11dp</item>
        <item name="android:layout_marginRight">11dp</item>
        <item name="android:scaleType">centerCrop</item>

    </style>

    <style name="good_morning_text_View">
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="menu_image_view">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SearchViewTheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:maxWidth">10000dp</item>
    </style>


    <style name="search_view">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:queryHint">Search</item>
        <item name="android:background">@drawable/search_background</item>

    </style>

    <style name="nameText">
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="locationText">
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">31dp</item>
    </style>

<style name="follow_ruth_button">
    <item name="android:textSize">13sp</item>
    <item name="android:layout_marginTop">32dp</item>

</style>

    <style name="message_button">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">36dp</item>
    </style>

    <style name="ellipse_image_view">
        <item name="android:layout_width">136sp</item>
        <item name="android:layout_height">128dp</item>
        <item name="android:layout_marginTop">90dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="grid_imageStyle1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">107dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginTop">11dp</item>
        <item name="android:layout_marginRight">11dp</item>
    </style>

    <style name="linear_layout">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="linear_layout1">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="grid_imageStyle2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">107dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginTop">11dp</item>
    </style>

    <style name="see_more_button">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:layout_marginBottom">36dp</item>
    </style>

    <style name="linear_layout3">
        <item name="android:layout_weight">2</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="linear_layout4">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">4dp</item>
    </style>
</resources>